{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": ".",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"removeComments": true,
		"paths": {
			"shared/*": [
				"../../packages/shared/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
