{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": ".",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"removeComments": true,
		"paths": {
			"@shared/*": [
				"../shared/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"../../packages/shared/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
